{
  "compilerOptions": {
    "outDir": "./dist/src",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["node_modules/@types", "**/@types/*"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
    },
  }
}